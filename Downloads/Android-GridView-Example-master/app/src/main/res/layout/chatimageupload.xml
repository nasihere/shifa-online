<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/c_graydark" >

    <ImageView
        android:id="@+id/ImgViewProfilePic"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_launcher"
        android:background="@color/black"
        android:layout_above="@+id/relativeLayout" />

    <TableLayout
        android:layout_width="fill_parent"
        android:id="@+id/tblButtonPic"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true"

        android:background="@color/c_graydark"
        android:orientation="horizontal"
        android:stretchColumns="*" >

    </TableLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/relativeLayout"
        android:layout_height="wrap_content"
        android:background="@color/c_graydark"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tblButtonPic">

        <EditText
            android:id="@+id/edtTextChat"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:text="@string/emptystring"
            android:background="@color/black"
            android:textColor="@color/c_blue"
            android:hint="Tap to add a caption.."
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imgGallerydbtn"
            android:layout_toStartOf="@+id/imgGallerydbtn" />



        <ImageButton
            android:id="@+id/imgGallerydbtn"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:padding="35dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_image_photo_library"
            android:text="Gallery"
            android:layout_alignTop="@+id/edtTextChat"
            android:layout_alignBottom="@+id/imgCameradbtn"
            android:layout_toLeftOf="@+id/imgCameradbtn"
            android:layout_toStartOf="@+id/imgCameradbtn" />

        <ImageButton
            android:id="@+id/imgCameradbtn"
            android:layout_width="wrap_content"
            android:padding="35dp"

            android:layout_height="wrap_content"
            android:background="@drawable/ic_image_camera_alt"
            android:layout_alignBottom="@+id/edtTextChat"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="For Security Reason: Inappropriate images are restricted admin users has permission to delete the picture and block your Shifa Account."
        android:textColor="@color/c_blue"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:layout_below="@+id/tblButtonPic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnChatImageSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textColor="@color/c_gold"
        android:background="@color/c_graydark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnCancelImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/c_blue"
        android:background="@color/c_graydark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>